{
	"env": {
		"browser": true,
		"es2021": true
	},
	"plugins": ["solid"],
	"extends": ["eslint:recommended", "plugin:solid/typescript"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"overrides": [{
		"files": ["*.ts", "*.tsx"],
		"rules": {
			"no-undef": "off"
		}
	}],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
